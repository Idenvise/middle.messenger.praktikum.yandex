<main class='app'>
  <form class='auth__form' name='signup'>
    <h1 class='auth__form__header'>Регистрация</h1>
    {{>Input inputType='email' inputName='email' labelText='Почта'}}
    {{>Input inputType='text' inputName='login' labelText='Логин'}}
    {{>Input inputType='text' inputName='firstName' labelText='Имя'}}
    {{>Input inputType='text' inputName='lastName' labelText='Фамилия'}}
    {{>Input inputType='tel' inputName='phone' labelText='Телефон'}}
    {{>Input inputType='password' inputName='password' labelText='Пароль'}}
    {{>Input inputType='password' inputName='repeatPassword' labelText='Пароль (ещё раз)'}}
    {{>Button buttonType='submit' buttonText='Зарегистрироваться'}}
    {{>BorderlessButton borderlessButtonType='button' borderlessButtonText='Войти'}}
  </form>
</main>